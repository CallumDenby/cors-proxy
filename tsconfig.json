{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "outDir": "./lib",
    "rootDirs": [ "./src" ],
    "strict": true,
    "target": "es2017",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
